@{
    ViewData["Title"] = "Order details";
}

@model List<Lab6.Models.Product>

<form asp-action="OrderDetails" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label asp-for="@Model[i].Name">Product Name:</label>
            <input asp-for="@Model[i].Name" class="form-control" />

            <label asp-for="@Model[i].Quantity">Quantity:</label>
            <input asp-for="@Model[i].Quantity" class="form-control" min="1" />
        </div>
    }
    <button type="submit">Submit Order</button>
</form>

