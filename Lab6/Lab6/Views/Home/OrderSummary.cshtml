@{
    ViewData["Title"] = "Order Summary";
}

@model List<Lab6.Models.Product>

<h2>Order Summary</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>
