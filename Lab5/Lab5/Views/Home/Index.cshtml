@{
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    ViewData["Title"] = "Submit Form";
    <h2>Submit Form</h2>

    <form method="post" asp-controller="Home" asp-action="SubmitForm">
        <label for="userValue">Value:</label>
        <input type="text" id="userValue" name="userValue" required />
        <br /><br />

        <label for="expirationDate">Expiration Date:</label>
        <input type="datetime-local" id="expirationDate" name="expirationDate" required />
        <br /><br />

        <button type="submit">Submit</button>
    </form>
}
